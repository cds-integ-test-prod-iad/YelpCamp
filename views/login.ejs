<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form class="form-signin" action="/login" method="post">
				<h1 class="h3 mb-3 font-weight-normal flux_static text-center">Please Login to Your Account</h1>
				<label for="inputUsername" class="sr-only">Username</label>
				<input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
				<label for="inputPassword" class="sr-only">Password</label>
  				<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
				
				<div class="row justify-content-between">
					<a class="btn btn-sm btn-primary btn-block col-4 neon-button" style="width: auto;" href="/forgot">Forgot
					</a>
					<button class="btn btn-lg btn-primary btn-block neon-button col-4 mt-0" type="submit">Sign in</button>
					<a class="btn btn-sm btn-primary btn-block col-4 neon-button mt-0" style="width: auto;" href="/campgrounds">Go Back
					</a>
				</div>
			</form>
			
		</div>
	</div>	
</div>

<%- include("./partials/footer") %>