<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="jumbotron">
			<h1>
			Welcome To YelpCamp!!!
			</h1>
			<p>
				View some thing.
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Camp</a>
			</p>
		</div>
	</header>
	
	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our Most Popular Sites
			</h3>
		</div>	
	</div>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach((campground) => { %>
			<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="card">
					<img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
					<div class="card-body">
						<h4 class="card-title"><%= campground.name %></h4>
						<% if (campground.rating === 0) { %>
						<em>No reviews yet.</em>
						<% } else { %>
						<span class="fas fa-star"></span>
                        <span class="<% if (campground.rating > 1.5) { %> fas fa-star  <% } else {%> far fa-star <% } %>"></span>
                        <span class="<% if (campground.rating > 2.5) { %> fas fa-star  <% } else {%> far fa-star <% } %>"></span>
                        <span class="<% if (campground.rating > 3.5) { %> fas fa-star  <% } else {%> far fa-star <% } %>"></span>
                        <span class="<% if (campground.rating > 4.5) { %> fas fa-star  <% } else {%> far fa-star <% } %>"></span>
						<% } %>
						<div>
                           <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
                       </div>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }) %>
	</div>
</div>

<%- include("../partials/footer") %>