	<body style="background: black;">
		<nav class="nav myNav fixed-top">
			<div class="container justify-content-between" style="height: 20px; width: 80%; margin-left: auto; margin-right: auto; padding: 0;">
				<div class="logo col-4 pl-0">
					<!-- <a href="/"><img src="https://hyperpix.net/wp-content/uploads/2019/08/cyberpunk-2077-logo-font-download.jpg" style="width:82px; height:86px"></a> -->
					<!-- <a href="/">Cyber</a> -->
					<div class="dropdown">
						<button class="btn btn-sm btn-primary btn-block neon-button">Contents</button>
						<div class="dropdown-content">
							<a href="/campgrounds">Campgrounds</a>
							<a href="#">Armory</a>
							<a href="#">Design Ideas</a>
						</div>
					</div>
				</div>
				
				<div id="mainListDiv col-4" class="main_list">
					<ul class="navlinks">
						<% if(!currentUser) {%>
							<li><a class="btn btn-sm btn-primary btn-block neon-button" href="/login">Login</a></li>
							<li class="pr-0"><a class="btn btn-sm btn-primary btn-block neon-button" href="/register">Sign Up</a></li>
						<% } else { %>
							<li><a class="btn btn-sm btn-primary btn-block neon-button" href="#"><%= currentUser.username %></a></li>
							<li><a class="btn btn-sm btn-primary btn-block neon-button" href="/logout">Logout</a></li>
							<li class="pr-0"><a class="btn btn-sm btn-primary btn-block neon-button" href="/users/<%= currentUser.id %>">Profile</a></li>
						<% } %>
					</ul>
				</div>
				
				<span class="navTrigger">
					<i></i>
					<i></i>
					<i></i>
				</span>
			</div>
		</nav>
		
		<script>
			$(window).scroll(function() {
				if ($(document).scrollTop() > 50) {
					$('.myNav').addClass('affix');
					console.log("OK");
				} else {
					$('.myNav').removeClass('affix');
				}
			});
			
			$('.navTrigger').click(function () {
				$(this).toggleClass('active');
				console.log("Clicked menu");
				$("#mainListDiv").toggleClass("show_list");
				$("#mainListDiv").fadeIn();
			});
			

		</script>
		
		<section class="home">
			<ul class="slideshow">
				<li></li>
				<li></li>
				<li></li>
