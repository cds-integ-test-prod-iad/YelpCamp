				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
				<li></li>
			</ul>
		</section>
		
		<div class="container card neon" id="mainContent" style="width: 80%; margin-top: 13rem;">
			<div class="container" style="width:100%">
				<% if(error && error.length > 0){ %>
				<div class="alert alert-danger neon-text-static" role="alert">
					<%= error %>
				</div>
				<% } %>
			</div>
			<div class="container" style="width:100%">
				<% if(success && success.length > 0){ %>
				<div class="alert alert-success neon-text-static" role="alert">
					<%= success %>
				</div>
				<% } %>
			</div>
			
		
		